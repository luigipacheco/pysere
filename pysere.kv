AccountDetailsForm:
 
<AccountDetailsForm>:
	height: "200dp"
	size_hint_y: None
	dir_box:dir_input
	search_box:search_input
	replace_box:replace_input
	orientation: "vertical"
	GridLayout:
		cols:2
		row_default_height: "40dp"
		row_force_default: True
		spacing: "5dp"
		padding:"5dp"
		Label: 
			text: 'Search for'
		TextInput:
			id: search_input
		Label:
			text: 'Replace with'
		TextInput:
			id: replace_input
		Label:
			text: "File..."
		TextInput:
			id: dir_input
	Button:
		size_hint_y: None
		height:"40dp"
		text: "SEARCH AND REPLACE"
		on_press: root.searchreplace()
		
		
		
